---
interface Props {
  title: string;
  description: string;
  date: string;
  time: number;
  tags: string[];
  url: string | undefined;
}

const { title, description, time, tags, date, url = "/" } = Astro.props;
---

<a
  class="space-y-6"
  href={url}
>
  <p class="font-bold text-2xl dark:text-slate-300">{title}</p>
  <p class="">{description}</p>
  <div class="text-sm italic flex space-x-2">
    <p>{date}</p><p>âˆ™</p><p>{time} minute read</p>
  </div>
  <ul class="flex text-xs space-x-2">
    {
      tags.map((tag) => (
        <li class="border rounded-full p-2 border-slate-400 dark:border-slate-500">
          {tag}
        </li>
      ))
    }
  </ul>
</a>
