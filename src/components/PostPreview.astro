---
interface Props {
  title: string;
  description: string;
  date: string;
  time: number;
  tags: string[];
  url: string | undefined;
}

const { title, description, time, tags, date, url = "/" } = Astro.props;
---

<a
  class="space-y-6"
  href={url}
>
  <p class="font-bold text-2xl dark:text-slate-300">{title}</p>
  <p class="">{description}</p>
  <div class="text-sm italic flex space-x-2">
    <p>{date}</p><p>âˆ™</p><p>{time} minute read</p>
  </div>
  <ul class="flex flex-wrap text-xs">
    {
      tags.map((tag) => (
        <li class="border rounded-full px-2.5 py-1 mr-2 mb-2.5 whitespace-nowrap border-slate-400 dark:border-slate-500">
          {tag}
        </li>
      ))
    }
  </ul>
</a>
